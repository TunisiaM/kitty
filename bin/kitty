#!/usr/bin/env ruby

class Kitty
  def night_kitty
    night_kitty = <<-'HERE KITTY KITTY' 
               *     ,MMM8&&&.            *
                    MMMM88&&&&&    .
                   MMMM88&&&&&&&
       *           MMM88&&&&&&&&
                   MMM88&&&&&&&&
                   'MMM88&&&&&&'
                     'MMM8&&&'      *
            |\___/|
            )     (             .              '
           =\     /=
             )===(       *
            /     \
            |     |
           /       \
           \       /
    _/\_/\_/\__  _/_/\_/\_/\_/\_/\_/\_/\_/\_/\_
    |  |  |  |( (  |  |  |  |  |  |  |  |  |  |
    |  |  |  | ) ) |  |  |  |  |  |  |  |  |  |
    |  |  |  |(_(  |  |  |  |  |  |  |  |  |  |
    |  |  |  |  |  |  |  |  |  |  |  |  |  |  |
    |  |  |  |  |  |  |  |  |  |  |  |  |  |  |
    HERE KITTY KITTY
  end

  def pounce_kitty
    pounce_kitty = <<-'HERE KITTY KITTY'
     ____
    (.   \
      \  |   
       \ |___(\--/)
     __/    (  . . )
    "'._.    '-.O.'
         '-.  \ "|\
            '.,,/'.,,
    HERE KITTY KITTY
  end

  def face_kitty
    face_kitty = <<-'HERE KITTY KITTY'
          _.---.._             _.---...__
       .-'   /\   \          .'  /\     /
       `.   (  )   \        /   (  )   /
         `.  \/   .'\      /`.   \/  .'
           ``---''   )    (   ``---''
                   .';.--.;`.
                 .' /_...._\ `.
               .'   `.a  a.'   `.
              (        \/        )
               `.___..-'`-..___.'
                  \          /
                   `-.____.-' 
    HERE KITTY KITTY
  end

  def sleep_kitty
    sleep_kitty = <<-'HERE KITTY KITTY'
               __..--''``\--....___   _..,_
           _.-'    .-/";  `        ``<._  ``-+'~=.
       _.-' _..--.'_    \                    `(^) )
      ((..-'    (< _     ;_..__               ; `' 
                 `-._,_)'      ``--...____..-'
    HERE KITTY KITTY
  end

  def chub_kitty
    chub_kitty = <<-'HERE KITTY KITTY'
                .                .                    
                :"-.          .-";                    
                |:`.`.__..__.'.';|                    
                || :-"      "-; ||                    
                :;              :;                    
                /  .==.    .==.  \                    
               :      _.--._      ;                   
               ; .--.' `--' `.--. :                   
              :   __;`      ':__   ;                  
              ;  '  '-._:;_.-'  '  :                  
              '.       `--'       .'                  
               ."-._          _.-".                   
             .'     ""------""     `.                 
            /`-                    -'\                
           /`-                      -'\               
          :`-   .'              `.   -';              
          ;    /                  \    :              
         :    :                    ;    ;             
         ;    ;                    :    :             
         ':_:.'                    '.;_;'             
            :_                      _;                
            ; "-._                -" :`-.     _.._    
            :_          ()          _;   "--::__. `.  
             \"-                  -"/`._           :  
            .-"-.                 -"-.  ""--..____.'  
           /         .__  __.         \               
          : / ,       / "" \       . \ ;
           "-:___..--"      "--..___;-"    
    HERE KITTY KITTY
  end

  def curious_kitty
    curious_kitty = <<-'HERE KITTY KITTY'
                    _                        
                    \`*-.                    
                     )  _`-.                 
                    .  : `. .                
                    : _   '  \               
                    ; *` _.   `*-._          
                    `-.-'          `-.       
                      ;       `       `.     
                      :.       .        \    
                      . \  .   :   .-'   .   
                      '  `+.;  ;  '      :   
                      :  '  |    ;       ;-. 
                      ; '   : :`-:     _.`* ;
                   .*' /  .*' ; .*`- +'  `*' 
                   `*-*   `*-*  `*-*'        
    HERE KITTY KITTY
  end

  def proud_kitty
    proud_kitty = <<-'HERE KITTY KITTY'
                           ;\
                          _' \_
                        ,' '  '`.
                       ;,)       \
                      /          :
                      (_         :
                       `--.       \
                          /        `.
                         ;           `.
                        /              `.
                       :                 `.
                       :                   \
                        \\                  \
                         ::                 :
                         || |               |
                         || |`._            ;
                        _;; ; __`._,       (________
                      ((__/(_____(______,'______(___)
    HERE KITTY KITTY
  end

  def all_kitties
    [night_kitty, pounce_kitty, face_kitty, sleep_kitty, chub_kitty, curious_kitty, proud_kitty]
  end

  def random_kitty
    print all_kitties[rand(all_kitties.length)]
  end
end

kitty = Kitty.new
kitty.random_kitty

